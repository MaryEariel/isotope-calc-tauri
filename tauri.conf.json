{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Калькулятор изотопов",
  "version": "0.1.0",
  "identifier": "com.maryeariel.isotope-calc",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173", 
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true, 
    "windows": [
      {
        "title": "Калькулятор изотопов",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:5173; img-src 'self' http://10.224.145.164:9000 data: blob:; connect-src 'self' http://10.224.145.164:8000; script-src 'self'; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": { 
    "http": {
      "enabled": true
    }
  }
}